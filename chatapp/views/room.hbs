<div class="container">
    <link rel="icon" type="image/x-icon" href="https://raw.githubusercontent.com/fanzeyi/pokemon.json/master/sprites/025MS.png">

    <div class="row">
        <h1>ポケモン　クイズ</h1>
        <div class="room-exit">
            <input type="button" value="退室" class="btn common-button room-exit_button" onclick="exit();">
        </div>
    </div>
    <div class="row">
        <form method="post" action="/">
            <div class="room-login_user">
                <p style="font-size: larger;">挑戦者：<b>{{userName}}</b>さん</p>
                <input id="userName" type="hidden" value="{{userName}}">
            </div>
            <div id="Question">
                <div id="QuestionSentence"><b style="font-size: large; color:rgb(46, 43, 43)">問題 : このポケモンの名前は？</b></div>
                <div class="question">
                </div>
            </div>
            <div class="hint-area">
                <div class="hint-btn-area">
                    <input type="button" value="ヒント（ポケモンの属性）" id='hintbtn' class="btn hint-btn common-button" onclick="hint();">
                    <input type="button" value="ヒント（文字数・最初の文字）" id='hintbtn' class="btn hint-btn common-button" onclick="addHint();">
                </div>
                <div class="hint"></div>
            </div>
            <div class="room-message">
                <textarea id="message" rows="2" class="room-message_textarea" placeholder="答えを入力しよう"></textarea>
                <input id="Answer" type="button" value="解答" class="btn ans-btn common-button" onclick="answerComp();">
            </div>
            <hr>
            <div id="thread">
                <div class="question">
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/answerComp.js"></script>
<script src="/javascripts/startApi.js"></script>
<script src="/javascripts/question.js"></script>
<script src="/javascripts/hint.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>
